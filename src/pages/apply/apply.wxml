<view class="page-container">
    <view class="apply-header__container">
        报名状态:
        <view class="page-header_title">
            待付款
        </view>
    </view>
    <view class="details__container">
        <view class="details__title">
            2019.4.16 沙井极速赛车场100cc租场活动
        </view>
        <view class="details-item">
            <view class="item__title">
                活动时间
            </view>
            19/05/06 14:00
        </view>
        <view class="details-item">
            <view class="item__title">
                活动场地
            </view>
            广东省深圳市
        </view>
        <view class="details-item">
            <view class="item__title">
              费用  
            </view>
            ¥666
        </view>
        <view class="details-item">
            <view class="item__title">
                截止时间  
            </view>
            19/05/15 18:00
        </view>
        <view class="details-item">
            <view class="item__title">
                组别  
            </view>
            KT100公开组
            </view>
        <view class="details-item">
            <view class="item__title">
              参赛方式  
            </view>
            个人
        </view>
        <view class="details-item">
            <view class="item__title">
             参赛方式 
            </view>
            三人车队赛
            <image class="item__logo" src="./../../assets/image/icon6.png"></image>
            <view class="item_desc">组建车队</view>
        </view>
    </view>
    <view class="payment-container">
        <view class="payment__item">
            <view class="item__title">
                支付方式
            </view>
            微信支付
        </view>
        <view class="payment__item">
            <view class="item__title">
                总金额
            </view>
            ¥666
        </view>
        <view class="payment__item">
            <view class="item__title">
                应付金额
            </view>
            ¥666
        </view>
        <view class="payment__item">
            <view class="item__title">
                联系人
            </view>
            <view class="item__desc">
               谭先生 
            </view>
            <view class="item__image">
                <image class="item-map" src="./../../assets/image/icon4.png"></image>
                <image class="item-map" src="./../../assets/image/icon1.png"></image>
            </view>
        </view>
    </view>
    <view class="handle-container">
        <!-- 报名-表单页-个人 -->
        <view class="handle-initial__section">
            <view class="teams-section">
                <view class="none-section">
                     参赛组别
                    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                        <view class="teams-list">
                            请选择您的参赛组别{{array[index]}}
                        </view>
                    </picker>
                </view>
                <view class="selected-section">
                    <view class="selected__item active">
                        KT100公开组
                    </view>
                    <view class="selected__item">
                        80cc公开组
                    </view>
                </view>
            </view>
            <view class="name-section">
                真实姓名
                <input class="name-input" type="text" placeholder="请输入您的真实姓名" />
            </view>
            <view class="phone-section">
                手机号码
                <input class="phone-input" type="number" placeholder="请输入您的手机号码" />
            </view>
            <view class="credentials-section">
                证件信息
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <view class="credentials-list">
                        请选择您的证件{{array[index]}}
                    </view>
                </picker>
                <input class="phone-input" type="idcard" placeholder="请输入您的证件号码" />
            </view>
            <view class="weight-section">
                体重
                <input class="weight-input" type="digit" placeholder="请输入您的体重" />
            </view>
            <view class="message-section">
                留言信息
                <input class="message-input" type="text" placeholder="请输入您的留言" />
            </view>
        </view>
        <!-- 报名-表单页 已报名未付款 已付款可取消 已付款不可取消  组队(已填)-->
        <view class="handle-process__section">
            <view class="teams-section">
                <view class="none-section">
                    参赛组别
                    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                        <view class="teams-list">
                            请选择您的参赛组别{{array[index]}}
                        </view>
                    </picker>
                </view>
                <view class="selected-section">
                    <view class="selected__item active">
                        KT100公开组
                    </view>
                    <view class="selected__item">
                        80cc公开组
                    </view>
                </view>
            </view>
            <view class="motorcade-section">
                车队选择
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <view class="motorcade-list">
                        请选择您的车队{{array[index]}}
                    </view>
                </picker>
            </view>
            <view class="member-section">
                车队成员
                <view class="node-item">
                    暂无
                </view>
                <!-- 此为已有人员渲染列表 -->
                <view class="member-list">
                    <view class="member-item">
                        陈某某
                        <image class="member-item_delete" src="./../../assets/image/icon5.png"></image>
                    </view>
                    <view class="member-item">
                        陈某某
                        <image class="member-item_delete" src="./../../assets/image/icon5.png"></image>
                    </view>
                </view>
            </view>
            <view class="message-section">
                留言信息
                <input class="message-input" type="text" placeholder="请输入您的留言" />
            </view>
        </view>
    </view>
    <view class="pay_container">
        <view class="pay-consult">
            <image class="consult_logo" src="./../../assets/image/icon3.png"></image>
            咨询
        </view>
        <view class="pay-button_container">
            <button class="nonepay">取消支付</button>
            <!-- <button class="nonepay-active">取消报名</button> -->
            <button class="pay">立刻支付</button>
            <!-- <button class="pay-active">已支付</button> -->
        </view>
    </view>
</view>
